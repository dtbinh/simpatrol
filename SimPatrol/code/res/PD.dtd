<!-- ETPD - Event Time Probability Distribution -->
<!ELEMENT etpd (pd_parameter*)>
<!ATTLIST etpd id ID #REQUIRED>
<!ATTLIST etpd seed CDATA #REQUIRED>
<!ATTLIST etpd next_bool_count CDATA #REQUIRED>
<!ATTLIST etpd type (0 | 1 | 2 | 3) #REQUIRED>

<!-- IPD - Integer Probability Distribution -->
<!ELEMENT ipd (pd_parameter*)>
<!ATTLIST ipd id ID #REQUIRED>
<!ATTLIST ipd seed CDATA #REQUIRED>
<!ATTLIST ipd type (0 | 1 | 2) #REQUIRED>

<!-- PD PARAMETER -->
<!ELEMENT pd_parameter EMPTY>
<!ATTLIST pd_parameter value CDATA #REQUIRED>